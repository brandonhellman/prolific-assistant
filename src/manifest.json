{
  // "author": "{package.author}",
  // "description": "{package.description}",
  // "manifest_version": 2,
  // "name": "{package.name}",
  // "version": "{package.version}",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/script.js"]
    }
  ],

  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "permissions": ["<all_urls>"],

  "browser_action": {
    // "default_title": "{package.name}",
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
