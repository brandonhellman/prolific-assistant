{
  "manifest_version": 2,

  "name": "Prolific Assistant",

  "version": "2.0.4",

  "description": "Monitors https://prolific.ac/ for new studies.",

  "icons": {
    "16": "prolific.png",
    "128": "prolific.png"
  },

  "browser_action": {
    "default_icon": "prolific.png",
    "default_title": "Prolific Assistant",
    "default_popup": "popup.html"
  },

  "author": "Kadauchi",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "tts",
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "https://www.prolific.ac/*"
  ],

  "short_name": "PA"
}
